# Génération d'une version complète sans iframe, autonome
html_no_iframe = """
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Connexion LinkedIn</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }
    .main-wrapper {
      max-width: 700px;
      margin: 60px auto;
      padding: 30px;
      background: white;
      border-radius: 16px;
      box-shadow: 0 12px 24px rgba(0,0,0,0.08);
    }
    h1 {
      text-align: center;
      font-size: 26px;
      margin-bottom: 16px;
    }
    p {
      text-align: center;
      font-size: 15px;
      color: #555;
      margin-bottom: 24px;
    }
    label {
      display: block;
      margin-top: 16px;
      margin-bottom: 6px;
      font-weight: bold;
      font-size: 14px;
    }
    input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 14px;
    }
    button {
      margin-top: 24px;
      width: 100%;
      padding: 14px;
      background-color: #3b82f6;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
    }
    button:hover {
      background-color: #2563eb;
    }
  </style>
</head>
<body>
  <div class="main-wrapper">
    <h1>Partagez automatiquement sur LinkedIn</h1>
    <p>Remplissez ce court formulaire pour connecter votre compte une seule fois.<br>Vous serez ensuite redirigé vers LinkedIn pour l'autorisation.</p>
    <form id="linkedinForm">
      <label for="prenom">Prénom :</label>
      <input type="text" id="prenom" name="prenom" required />

      <label for="nom">Nom :</label>
      <input type="text" id="nom" name="nom" required />

      <label for="email">Email :</label>
      <input type="email" id="email" name="email" required />

      <label for="phone">Téléphone :</label>
      <input type="text" id="phone" name="phone" required />

      <button type="submit">Valider et continuer vers LinkedIn</button>
    </form>
  </div>

  <script>
    document.getElementById("linkedinForm").addEventListener("submit", async function(e) {
      e.preventDefault();
      const form = e.target;
      const formData = new FormData(form);

      const url = "https://script.google.com/macros/s/AKfycbxYg8BxdXMWN7DMpiVeEw_RpcPbVRlAzoNbd7tFdacD_N7l1FGiw-oQrkngnrmGI70_/exec";

      try {
        const response = await fetch(url, {
          method: "POST",
          body: formData
        });

        const html = await response.text();
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, "text/html");
        const script = doc.querySelector("script");

        if (script) {
          const match = script.innerText.match(/window\\.location\\.href\\s*=\\s*['"](.*?)['"]/);
          if (match && match[1]) {
            window.location.href = match[1]; // ✅ Redirection directe car hors iframe
          } else {
            alert("Script trouvé mais pas de redirection détectée.");
          }
        } else {
          alert("Connecté, mais pas de script trouvé.");
        }
      } catch (error) {
        console.error("Erreur :", error);
        alert("Erreur d'envoi. Réessaye.");
      }
    });
  </script>
</body>
</html>
"""

file_path_no_iframe = "/mnt/data/form_linkedin_ruben_no_iframe.html"
with open(file_path_no_iframe, "w", encoding="utf-8") as f:
    f.write(html_no_iframe)

file_path_no_iframe
